@page "/orders"
@layout OrdersLayout
@inject HttpClient hclient;

<h3>Orders</h3>

<div class="nav-item px-3">
	<NavLink class="nav-link" href="new-order">
		<span class="oi oi-list-rich" aria-hidden="true"></span> Додати свічку
	</NavLink>
</div>

<CascadingValue Value="can">
	<CandleItemFullInfo />
</CascadingValue>

@code {

	public CandleFullVM can { get; set; } = null!;



	protected override async Task OnInitializedAsync()
	{
		can = await hclient.GetFromJsonAsync<CandleFullVM>("api/Candle/cid=1?view=full");
	}

}
